      <% }); %>
    </div>

    <footer>
      <nav>
        <div class="row">
          <div class="col-xs-6">
            <a href="mailto:info@pdxindustrial.com">
              <strong>PDX</strong> INDUSTRIAL DESIGN LLC
            </a>
          </div>
          <div class="col-xs-6">
            <a href="mailto:info@pdxindustrial.com">
              <strong>DANNY PETER</strong>, FOUNDER
            </a>
          </div>
        </div>
      </nav>

      <img class="city" src="dist/img/footer.gif" />
    </footer>

    <script src="dist/js/app.min.js"></script>
    <script>
      new LazyLoad();
    </script>
  </body>

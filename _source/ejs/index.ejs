    <header>
      <img class="city" src="dist/img/header.gif" />
      <a href="mailto:info@pdxindustrial.com">
        <img class="logo" src="dist/img/logo.svg" />
      </a>
    </header>

    <div class="row grid-container" id="app">
      <% projects.forEach((project, index) => { %>
        <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3 grid-item">
          <img id="grid-item-<%= index %>" data-original="<%= project.img %>" width="500" height="500">
